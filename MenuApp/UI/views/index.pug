doctype html
html(lang='en')
	include head.html
	body(style="background: linear-gradient(180deg, black 0%, rgb(174,174,174) 45%, white);")

		div.container-fluid.d-flex.justify-content-center.align-items-center
			div.row
				div.col-md-12(style='padding: 0;')
					img.img-fluid(src= img_url style='opacity: 1;filter: blur(3px);')
			div(style='position: absolute;')
				h1(style="font-size: 40px;font-family: 'ADLaM Display', serif;")= name


		include navbar.html

		section(id="main")
			each item in items
				if item.type == "main"
					div.container(style='margin-top: 20px;')
						div.card(style='margin-top: 0px;')
							img.img-fluid.card-img-top.w-100.d-block(src= item.img_url)
							div.card-body
								h4.card-title(style='font-size: 28px;font-family: Bayon, sans-serif;')= item.name 
								p.card-text= item.description
								div.row
									div.col.d-flex.justify-content-start
										p.d-flex.justify-content-end(style='font-family: Bayon, sans-serif;font-size: 25px;margin: 0px;') #{item.price} lei
									div.col.d-flex.justify-content-end
										button.btn.btn-outline-primary(type='button' style='margin-right: 0px;padding: 3px 4.5px;')
											svg(xmlns='http://www.w3.org/2000/svg' width='1em' height='1em' viewbox='0 0 24 24' fill='none' data-bss-hover-animate='tada' style='font-size: 25px;')
